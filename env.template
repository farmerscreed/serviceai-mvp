# Supabase Configuration
# Get these from your Supabase project settings (https://supabase.com/dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Stripe Configuration (Task 0.3)
# Get from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your-secret-key-here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Stripe Price IDs (After creating products in Stripe Dashboard)
STRIPE_PRICE_STARTER_MONTHLY=price_starter_monthly
STRIPE_PRICE_STARTER_YEARLY=price_starter_yearly
STRIPE_PRICE_PRO_MONTHLY=price_pro_monthly
STRIPE_PRICE_PRO_YEARLY=price_pro_yearly
STRIPE_PRICE_ENTERPRISE_MONTHLY=price_enterprise_monthly
STRIPE_PRICE_ENTERPRISE_YEARLY=price_enterprise_yearly

# Vapi.ai Configuration (for Phase 2)
# Get from https://vapi.ai/dashboard
VAPI_API_KEY=your-vapi-api-key-here
VAPI_PHONE_NUMBER_ID=your-phone-number-id-here
VAPI_WEBHOOK_URL=https://your-ngrok-url.ngrok-free.app
VAPI_DEFAULT_COUNTRY=US
VAPI_WEBHOOK_SECRET=your-webhook-secret-here

# Twilio Configuration (for Phase 3)
# Get from https://console.twilio.com
# Used for: SMS & Phone Number Import to Vapi
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Bring Your Own (BYO) SIP Trunk (Optional - Advanced)
# If you have your own SIP trunk/carrier, add credential from Vapi Dashboard
# Get credential ID from https://dashboard.vapi.ai/provider-credentials
BYO_SIP_CREDENTIAL_ID=your-byo-sip-credential-id

# OAuth Provider Configuration (Optional)
# Google OAuth - Get from https://console.cloud.google.com
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft OAuth - Get from https://portal.azure.com
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret

# Email Configuration (Optional, uses Supabase by default)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@serviceai.com

# Environment
NODE_ENV=development


